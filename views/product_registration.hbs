<div id="r-alert-box" role="alert" style="position: absolute; top:10px; left:650px"></div>
<div class="container" id="container">
	<div class="row">
		<div class="col-lg-3"></div>
		<div class="col-lg-6">
			<div id="ui">
				<h1 class="text-center">Product Registration Form
					<hr style="background-color: white ">
				</h1>
				<form class="form-group text-center" id="sellerform" onsubmit="return false;">
					<div class="row ">
						<div class="col-lg-6">
							<label>Product Name</label>
							<input type="text" name="productName" id="name" class="form-control"
								placeholder="Enter Product Name">
						</div>
						<div class="col-lg-6">
							<label>Product Serial Number</label>
							<input type="Number" name="productSerialNumber" id="number" class="form-control"
								placeholder="Enter Serial Number">
						</div>
					</div><br>
					<div class="row">
						<div class="col-lg-6">
							<label>Product Sub Category</label>
							<input type="text" name="productCategory" id="category" class="form-control"
								placeholder="i.e Mobile,laptop,Men's Wear etc.">
						</div>
						<div class="col-lg-6">
							<label>MRP</label>
							<input type="Number" name="productPrice" id="price" class="form-control"
								placeholder="Enter MRP of the Product">
						</div>
					</div><br>
					<div class="row">
						<div class="col-lg-6">
							<label>Product Category</label>
							<input type="text" name="productDescription" id="product" class="form-control"
								placeholder="Electronics,Fasion,kitchen">
						</div>
						<div class="col-lg-6">
							<label>Choose Manufacturing Date</label>
							<input type="Date" name="productionDate" id="date" class="form-control">
						</div>
					</div><br>
					<div class="row">
						<div class="col-lg-6">
							<label>Paste Your Image Url</label>
							<input type="url" name="productImage" id="image" class="form-control"
								placeholder="Image url">
						</div>
						<div class="col-lg-6">
							<label> Product Feature1</label>
							<input type="text" name="productHighlights1" id="feature1" class="form-control"
								placeholder="write something about product">
						</div>
					</div><br>
					<div class="row">
						<div class="col-lg-6">
							<label> Product Feature2</label>
							<input type="text" name="productHighlights2" id="feature2" class="form-control"
								placeholder="write something about product">
						</div>
						<div class="col-lg-6">
							<label> Product Feature3</label>
							<input type="text" name="productHighlights3" id="feature3" class="form-control"
								placeholder="write something about product">
						</div>
					</div><br>

					<input type="submit" name="submit" value="Register Product" class="btn btn-primary btn-block btn-lg"
						id="r-submit">
				</form>
			</div>
		</div>
	</div>
</div>


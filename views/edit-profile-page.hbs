<div class="container">
    <h1>Edit User Information</h1>
    <form>
        <div class="form-row">
            <div class="col mx-auto">
                <input type="text" class="form-control" name="userName" placeholder="Name" required>
            </div>
            <div class="col mx-auto">
                <input type="text" class="form-control" name="email" placeholder="Email-ID" required>
            </div>
        </div>
    </form>
    
    <form>
        <div class="form-row">
            <div class="col mt-3 mx-auto">
                <input type="text" class="form-control" name="gender" placeholder="Gender" required>
            </div>
            <div class="col mt-3 mx-auto">
                <input type="text" class="form-control" name="dateOfBirth" placeholder="Date Of Birth" required>
            </div>
        </div>
    </form>
    <form>
        <div class="form-row">
             <div class="col mt-3 mx-auto">
                <input type="number" class="form-control" name="mobileNumber" placeholder="10-digit mobile number" required>
            </div>
            <div class="col mt-3 mx-auto">
                <input type="number" class="form-control" name="phone" placeholder="Alternate Phone(optional)" required>
            </div>
        </div>
    </form>
    <div class="form-row buttons">
        <div class="form-check-inline">
            <button type="submit" class="button1">Update</button>
        </div>
        <div class="form-check-inline3">
            <button type="submit" class="button2">Cancel</button>
        </div>
    </div>
</div>
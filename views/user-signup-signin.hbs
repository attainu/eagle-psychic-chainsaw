<div class="container" id="container">
    <div class="form-container sign-up-container">
        <form action="#">
            <h1>Create Account</h1>
            <input type="text" name="name" id="name" placeholder="Name">
            <input type="email" name="email" id="email1" placeholder="Email">
            <input type="number" name="number" id="number" placeholder="Mobile number">
            <input type="password" name="password" id="password" placeholder="Password">
            <input type="password" name="password" id="password1" placeholder="Confirm-password">
            <button>Sign Up</button>
        </form>
    </div>
    <div class="form-container sign-in-container">
        <form action="#">
            <h1>Sign In</h1>
            <input type="email" name="email" id="email2" placeholder="Email">
            <input type="password" name="password" id="user-password" placeholder="Password">
            <a href="#">Forgot your Password?</a>
            <button>Sign In</button>
        </form>
    </div>
    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel overlay-left">
                <h1>Welcome Back</h1>
                <p>
                    To keep shopping with us please login with your personal details.
                </p>
                <button class="transport" id="signIn">Sign In</button>
            </div>
            <div class="overlay-panel overlay-right">
                <h1>Hello, Dear User!</h1>
                <p>
                    Enter your Personal details and start your shoping Jounery with Us.
                </p>
                <button class="transport" id="signUp">Sign Up</button>
            </div>
        </div>
    </div>
</div>